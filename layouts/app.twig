		<!--Global-->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/weui/2.6.5/style/weui.min.css" type="text/css" rel="stylesheet"/> <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/css/bootstrap-grid.min.css" type="text/css" rel="stylesheet"/>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.2.0/github-markdown.min.css" type="text/css" rel="stylesheet"/>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" type="text/css" rel="stylesheet"/>

		<style>

			/*WeUI Page*/
			.page,
			body {
				max-width: 768px;
				margin: auto;
				background-color: var(--weui-BG-0);
			}

			.page__hd {
				padding: 40px 16px;
			}

			.page__title {
				text-align: left;
				font-size: 20px;
				font-weight: 400;
				color: var(--weui-FG-0);
			}

			.page__desc {
				margin-top: 4px;
				color: var(--weui-FG-1);
				text-align: left;
				font-size: 14px;
			}

			/*WeUI Searchbar*/
			.weui-search-bar .weui-search-bar__box {
				width: 0
			}

			.weui-search-bar.weui-search-bar_focusing .weui-search-bar__box {
				width: auto
			}

			.weui-search-bar .weui-search-bar__label {
				z-index: 0
			}


			/*WeUI Dialog*/
			.weui-half-screen-dialog {
				margin: auto;
				max-width: 768px;
				height: auto;
				max-height: 90%;
				-webkit-transition: -webkit-transform 0.3s;
				transition: -webkit-transform 0.3s;
				transition: transform 0.3s;
				transition: transform 0.3s, -webkit-transform 0.3s;
				-webkit-transform: translateY(100%);
				transform: translateY(100%)
			}

			.weui-half-screen-dialog,
			.weui-half-screen-dialog__hd {
				width: 100%ï¼›
			}

			.weui-half-screen-dialog__hd__side+.weui-half-screen-dialog__hd__main {
				width: calc(100% - 80px)
			}

			.weui-half-screen-dialog__title {
				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;
			}

			.weui-half-screen-dialog__desc td,
			.weui-half-screen-dialog__desc th {
				padding: 0;
			}

			.weui-half-screen-dialog__desc table th,
			.weui-half-screen-dialog__desc table td {
				padding: 6px 13px;
				border: 1px solid var(--weui-FG-3);
				font-size: 14px
			}

			.weui-half-screen-dialog__desc table tr {
				background-color: var(--color-canvas-default);
				border-top: 1px solid var(--weui-FG-3);
			}

			.weui-half-screen-dialog__desc {
				font-weight: initial;
			}

			.weui-half-screen-dialog__desc table {
				border-spacing: 0;
				border-collapse: collapse;
				width: 100%;
				overflow: auto;
				margin-top: 0;
				margin-bottom: 16px;
			}

			.weui-half-screen-dialog_show {
				-webkit-transform: translateY(0);
				transform: translateY(0)
			}

			.weui-half-screen-dialog__hd .weui-btn_icon {
				color: var(--weui-FG-0);
			}

			#dialog_media {
				width: 100%;
				max-height: 300px;
				margin-bottom: 16px;
				text-align: center
			}

			#dialog_media video {
				width: 100%;
				max-height: 300px;
			}

			#dialog_media audio {
				width: 100%;
			}

			#dialog_media img {
				max-width: 100%;
				max-height: 300px;
			}

			#dialog_media pre {
				margin-bottom: 16px;
				padding: 0 16px;
				overflow: auto;
				font-size: 85%;
				line-height: 1.45;
				background-color: var(--weui-BG-1);
				border-radius: 6px;
				text-align: initial;
				max-height: 250px;
			}

            #prev, #next {
                position: absolute;
                z-index: 999;
                top: 150px;
                left: 10px;
                display: block;
                width: 30px;
                height: 30px;
                font-size: 18px;
                text-align: center;
                line-height: 30px;
                border-radius: 50%;
                color: #111;
                background-color: antiquewhite;
            }
          
            #next {
              	left:auto;
                right: 10px
            }
          
          	#prev:active, #next:active {
          		opacity: .5;
          	}
          
            .epub-container {
              	background-color: antiquewhite;
            }

			/*WeUI List*/
			.weui-list__file .weui-cell {
				padding: 8px 16px;
				font-size: 14px;
			}

			.weui-list__file .weui-cell {
				padding: 8px 16px;
				font-size: 14px;
			}

			.weui-cell__ft-display::after {
				color: transparent !important;
			}

			.weui-link-text {
				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;
			}

			.file-link {
				padding: 8px 16px;
				font-size: 14px;
			}

			.weui-link,
			.markdown-body a,
			.weui-link-text {
				color: #576b95;
				color: var(--weui-LINK);
			}

			.markdown-body,
			.markdown-body img {
				background-color: var(--weui-BG-2);
			}

			.weui-panel {
				border-radius: 4px;
			}

			.weui-footer {
				padding: 30px 0 20px;
			}

			.weui-footer__link img {
				margin-right: 2px;
				width: 16px;
				height: 16px;
			}

			.placeholder {
				width: 24px;
			}

			.weui-panel__hd:has(.placeholder) {
				display: flex;
			}

			.row:has(~ .placeholder) {
				flex: 1 0;
			}

			/*WeUI Progress*/
			.weui-progress__inner-bar {
				transition: width 0.3s;
			}

			/*Table*/
			.table-responsive {
				overflow-x: auto;
				-webkit-overflow-scrolling: touch;
			}

			table .weui-loadmore {
				margin: 0;
			}

			@media only screen and(max-width: 768px) {
				.weui-panel {
					border-radius: 0;
				}
			}
		</style>

		{% if config('google_analytics_id', false) %}
			{% include 'components/analytics/google.twig' %}
		{% endif %}

		{% if config('matomo_analytics_url', false) and config('matomo_analytics_site_id', false) %}
			{% include 'components/analytics/matomo.twig' %}
		{% endif %}
	</head>
	<body>
		{% block content %}{% endblock %}
	</body>

</html>
